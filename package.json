{
  "name": "astromuse-be",
  "version": "1.0.0",
  "description": "Backend pro Astromuse aplikaci",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "node --loader ts-node/esm src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "lint": "eslint --cache \"src/**/*.{ts,js}\" && echo \"✅  Lint passed (no errors)\"",
  "lint:fix": "eslint --cache \"src/**/*.{ts,js}\" --fix && echo \"✅  Lint fixed & passed\"",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "prepare": "husky install"
  },

  "lint-staged": {
    "*.{ts,js}": ["eslint --fix", "prettier --write"],
    "*.{json,md}": "prettier --write"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@fastify/swagger": "^9.4.2",
    "@fastify/swagger-ui": "^5.2.2",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.2",
    "kysely": "^0.27.6",
    "pg": "^8.14.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@types/node": "^22.13.17",
    "@types/pg": "^8.11.11",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.2"
  }
}